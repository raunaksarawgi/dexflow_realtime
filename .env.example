# Server Configuration
NODE_ENV=development
PORT=3000

# Redis Configuration
# For local development with Docker:
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# For production (Upstash example):
# REDIS_URL=rediss://default:YOUR_PASSWORD@YOUR_ENDPOINT.upstash.io:6379
# Note: Use 'rediss://' (double s) for TLS/SSL connections
# Get free Redis at: https://upstash.com or https://redis.com/try-free/
# See DEPLOYMENT.md for complete setup guide

# Cache Configuration
CACHE_TTL=30
API_CACHE_TTL=15

# Rate Limiting
RATE_LIMIT_PER_MINUTE=300
RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ORIGIN=*

# API Configuration
DEXSCREENER_BASE_URL=https://api.dexscreener.com/latest/dex
JUPITER_BASE_URL=https://lite-api.jup.ag/tokens/v2

# WebSocket Configuration
WS_UPDATE_INTERVAL=30000

# Logging
LOG_LEVEL=info
